<!doctype html>
<html lang="en">

    <head>
        {{> header}}
        <title>Redpoint</title>
        <link rel="stylesheet" href="/css/style.css">

    </head>
    
    <body>
       {{> navHeader}}
        <div id = "mainCont">
            <label id = "data-monthly-stats" >This month's stats</label>
            <section id = "data-averages">
                <div class = "monthly-stats-container">
                    <div class = "monthly-stats-value">5x</div>
                    <label class = "stats-title">Sessions</label>
                </div>

                <div class = "monthly-stats-container">
                    <div class = "monthly-stats-value">1:40</div>
                    <label class = "stats-title">Time</label>
                </div>

                <div class = "monthly-stats-container">
                    <div class = "monthly-stats-value">5</div>
                    <label class = "stats-title">Avg Grade</label>
                </div>

            </section>
            <section class = "data-title">All Routes Stats</section>
                {{# userRoutes}}
            <div class = "data-item">
            <section class = "data-header">
                <div class = "data-name-date">
                    <div>{{name}}</div>
                    <div>10/19/2020</div>
                </div>
                <section class = "data-edit-delete">
                    <a href = "/users/edit/route/{{id}}">
                        <button class = "route-delete-edit"><i class="fas fa-edit">Edit</i></button>
                    </a>
                    <form method = "POST" action = "/users/delete-route">
                        <input type = "hidden" value={{id}} name = "id">
                        <input type = "hidden" value={{session_Id}} name = "sessionid">
                        <button class = "route-delete-edit"><i class="fas fa-trash"></i></button>    
                    </form>
                    
                </section>
            </section>
                
            <section class = "data-information">
                <section id = "data-grade">
                    <div>{{grade}}</div>
                    <label id = "grade-label">Grade</label>
                </section>
                <section class = "data-categories">
                    <div>color: {{color}}</div>
                    <div>rating: {{rating}}</div>
                    <div>attempts: {{attempts}}</div>
                    <div>sent: {{sent}}</div>
                </section>
                <section id = "data-time">
                    <div id = "time-value">1:35</div>
                    <label id = "time-label">Time</label>
                </section>

            </section>
            </div>

                {{/ userRoutes}}
        </div>
        {{> navbar}}



       <script src='../js/users-data.js'></script>
    </body>
</html>